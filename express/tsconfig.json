{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  },
  "exclude": ["node_modules", "dist", ".vscode"]
}
